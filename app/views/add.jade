doctype html
html
  title M2N SHOP-ADD
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Montserrat')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  style.
    .w3-sidebar a {font-family: "Roboto", sans-serif}
    body,h1,h2,h3,h4,h5,h6,.w3-wide {font-family: "Montserrat", sans-serif;}
  body.w3-content(style='max-width:1200px')
    // Overlay effect when opening sidebar on small screens
    #myOverlay.w3-overlay.w3-hide-large(onclick='w3_close()', style='cursor:pointer', title='close side menu')
    // !PAGE CONTENT!
    .w3-main(style='margin-left:250px')
      // Push down content on small screens
      .w3-hide-large(style='margin-top:83px')
      // Top header
      header.w3-container.w3-xlarge
        p.w3-right
      // Image header
      // Footer
      footer#footer.w3-padding-64.w3-light-grey.w3-small.w3-center
        .w3-row-padding
          .w3-col.s4
            center
              form(action='/action_page.php', target='_blank')
                h2.w3-wide.w3-center ADD STOCK
                p
                  center
                    input.w3-input.w3-border(type='text', placeholder='NAME PRODUCT....', name='NAME PRODUCT.....', required='')
                p
                  center
                    input.w3-input.w3-border(type='text', placeholder='PRICE....', name='PRICE......', required='')
                button.w3-button.w3-padding-large.w3-black.w3-margin-bottom(type='button', onclick="document.getElementById('newsletter').style.display='none'") ADD
                |           &nbsp &nbsp
                button.w3-button.w3-padding-large.w3-black.w3-margin-bottom(type='button', onclick="document.getElementById('newsletter').style.display='none'") ADD PIC.
      // End page content
    // Newsletter Modal
    #newsletter.w3-modal
      .w3-modal-content.w3-animate-zoom(style='padding:32px')
        .w3-container.w3-white.w3-center
          i.fa.fa-remove.w3-right.w3-button.w3-transparent.w3-xxlarge(onclick="document.getElementById('newsletter').style.display='none'")
          h2.w3-wide NEWSLETTER
          p Join our mailing list to receive updates on new arrivals and special offers.
          p
            input.w3-input.w3-border(type='text', placeholder='Enter e-mail')
          button.w3-button.w3-padding-large.w3-red.w3-margin-bottom(type='button', onclick="document.getElementById('newsletter').style.display='none'") Subscribe
    script.
      // Accordion
      function myAccFunc() {
      var x = document.getElementById("demoAcc");
      if (x.className.indexOf("w3-show") == -1) {
      x.className += " w3-show";
      } else {
      x.className = x.className.replace(" w3-show", "");
      }
      }
      // Click on the "Jeans" link on page load to open the accordion for demo purposes
      document.getElementById("myBtn").click();
      // Script to open and close sidebar
      function w3_open() {
      document.getElementById("mySidebar").style.display = "block";
      document.getElementById("myOverlay").style.display = "block";
      }
      function w3_close() {
      document.getElementById("mySidebar").style.display = "none";
      document.getElementById("myOverlay").style.display = "none";
      }
